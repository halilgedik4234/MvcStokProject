@using MvcStok.Models.EntityFramework
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tblKategori" class="table table-hover">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori ADI</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td> <a href="/Kategori/Sil/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                <td> <a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-warning">GÜNCELLE</a></td>

            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Kategori/YeniKategori/" class="btn btn-primary"> YENİ KATEGORİ EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>


<script>
    $('#tblKategori').DataTable();
</script>