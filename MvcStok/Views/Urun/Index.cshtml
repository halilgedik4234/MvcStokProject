@using MvcStok.Models.EntityFramework
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        <strong>Aranacak Ürün Adı:</strong> @Html.TextBox("p")
        <input type="submit" values="Ara" />
    </p>
}

<table class="table table-hover">
    <tr>
        <th>Ürün ID</th>
        <th>Ürün AD</th>
        <th>Marka</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.URUNID</th>
                <td>@item.URUNAD</td>
                <td>@item.MARKA</td>
                <td>@item.TBLKATEGORILER.KATEGORIAD</td>
                <td>@item.FIYAT</td>
                <td>@item.STOK</td>
                <td> <a href="/URUN/Sil/@item.URUNID" class="btn btn-danger">SİL</a></td>
                <td> <a href="/URUN/UrunGetir/@item.URUNID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<div style="margin-bottom:40px">
    <a href="/Urun/UrunEkle/" class="btn btn-primary"> YENİ ÜRÜN EKLE</a>
</div>


